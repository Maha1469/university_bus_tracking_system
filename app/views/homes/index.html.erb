<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-12">
            <center><h3>ADMIN DASHBOARD</h3></center>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Drivers:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @drivers %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Buses:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @buses %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Active Buses:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @active %> </label>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <label class="my_label">Total Un-Active Buses:</label>
          </div>
          <div class="col-md-6">
            <label class="my_value"> <%= @unactive %> </label>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
