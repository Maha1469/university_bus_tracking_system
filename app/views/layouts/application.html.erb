<!DOCTYPE html>
<html>
  <head>
    <title>University Transport Tracking System</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="row" style="z-index: 9999999;">
      <% if notice %>
        <div id="notice_wrapper" class="my_notice">
          <center><p class="app_notice"><%= notice %></p></center>
        </div>
      <%elsif alert %>
        <div id="notice_wrapper" class="my_alert">
          <center><p class="app_alert"><%= alert %></p></center>
        </div>
      <% end %>
    </div>
    <div class="container-fluid">
      <%if user_signed_in? %>
      <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
          <div id="dismiss">
              <i class="glyphicon glyphicon-arrow-left"></i>
          </div>
          <div class="sidebar-header">
              <h3>University Transport Tracking System</h3>
          </div>
          <ul class="list-unstyled components">
            <li>
              <%= link_to "Dashboard", root_path%>
            </li>
            <li class="active">
              <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false">Buses</a>
              <ul class="collapse list-unstyled" id="homeSubmenu">
                  <li><%= link_to "Show All", buses_path%></li>
                  <li><%= link_to 'Add New Bus', new_bus_path %></li>
                  <li><a href="#">Home 3</a></li>
              </ul>
            </li>
            <li>
              <a href="#">About</a>
              <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Pages</a>
              <ul class="collapse list-unstyled" id="pageSubmenu">
                  <li><a href="#">Page 1</a></li>
                  <li><a href="#">Page 2</a></li>
                  <li><a href="#">Page 3</a></li>
              </ul>
            </li>
            <li>
              <%= link_to "Logout", destroy_user_session_path, method: :delete%>
            </li>
          </ul>
        </nav>
        <!-- Page Content Holder -->
        <div id="content">
          <nav class="navbar navbar-default">
              <div class="container-fluid">
                  <div class="navbar-header">
                      <button type="button" id="sidebarCollapse" class="btn btn-info navbar-btn">
                          <i class="glyphicon glyphicon-align-left"></i>
                          <span>Menu</span>
                      </button>
                  </div>
              </div>
          </nav>
          <%= yield%>
        </div>
      </div>
      <div class="overlay"></div>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>
      <%else%>
        <%= yield %>
      <%end%>
    </div>
  </body>
</html>
